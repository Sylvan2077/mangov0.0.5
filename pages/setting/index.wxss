.unit {
  background-color:#fff;
	width:100%;
	height:45px;
  line-height: 45px;
  margin-top: 1px;
}
.unit image {
  width:21px;
	height: 21px;
	margin:0 15px;
  position: relative;
  top:3px;
}
.form-unit {
	width:100%;
	height:80rpx;
  line-height: 80rpx;
  margin-top: 2rpx;
  position: relative;
  border-bottom: 2rpx #ddd solid;
  display: flex;
  flex-direction:row;
}
.form-unit .txt{
	width:40%;
}
.form-unit .content{
	width:60%;
  text-align: right;
}
.form-unit .content input{
  margin-top: 15rpx;
}
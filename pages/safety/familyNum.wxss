.unit {
  background-color:#fff;
	width:100%;
	height:90rpx;
  line-height: 90rpx;
  margin-top: 1px;
  position: relative;
}
.unit image {
  width:42rpx;
	height: 42rpx;
	margin:0 30rpx;
  position: relative;
  top:6rpx;
}
.txt {
  display: flex;
  flex-direction: row;
}
.cell-1 {
  width:120rpx;
}
.cell-2 {
  width:330rpx;
}
.cell-3 {
  width:300rpx;
  text-align: right;
  margin-right: 20rpx;
}
.form-unit {
	width:100%;
	height:80rpx;
  line-height: 80rpx;
  margin-top: 2rpx;
  position: relative;
  border-bottom: 2rpx #ddd solid;
  display: flex;
  flex-direction:row;
}
.form-unit .txt{
	width:40%;
}
.form-unit .content{
	width:60%;
  text-align: right;
}
.form-unit .content input{
  margin-top: 15rpx;
}

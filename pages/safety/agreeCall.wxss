.header {
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
}
.unit {
  background-color:#fff;
	width:100%;
	height:80rpx;
  line-height: 80rpx;
  margin-top: 1px;
  position: relative;
}
.unit image {
  width:42rpx;
	height: 42rpx;
	margin:0 30rpx;
  position: relative;
  top:6rpx;
}
.txt {
  display: flex;
  flex-direction: row;
}
.cell-1 {
  width:120rpx;
}
.cell-2 {
  width:330rpx;
}
.cell-3 {
  width:300rpx;
  text-align: right;
  margin-right: 20rpx;
}
.form-unit {
	width:100%;
	height:80rpx;
  line-height: 80rpx;
  margin-top: 2rpx;
  position: relative;
  border-bottom: 2rpx #ddd solid;
  display: flex;
  flex-direction:row;
}
.form-unit .txt{
	width:40%;
}
.form-unit .content{
	width:60%;
  text-align: right;
}
.form-unit .content input{
  margin-top: 15rpx;
}
.form-unit .content image{
  width: 50rpx;
  height:50rpx;
  margin-left: 8rpx;
  margin-top: 15rpx;
}
.form-unit .content.baba .baba{
    border: 1px #48C23D solid;
    border-radius: 50%;
}
.form-unit .content.mama .mama{
    border: 1px #48C23D solid;
    border-radius: 50%;
}
.form-unit .content.yeye .yeye{
    border: 1px #48C23D solid;
    border-radius: 50%;
}
.form-unit .content.nainai .nainai{
    border: 1px #48C23D solid;
    border-radius: 50%;
}
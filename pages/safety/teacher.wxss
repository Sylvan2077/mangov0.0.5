.header {
  width: 100%;
  height: 50px;
}
.header input {
  width:94%;
  background-color:#fff;
}
.placeholder {
  text-align: center;
}
.margin {
  width:100%;
  height:20px;
  background-color:#fff;
}
.contact-unit {
  width:100%;
  background-color: #fff;
}
.contact-unit .grade-class{
  width:730rpx;
  height: 40px;
  line-height: 40px;
  vertical-align: middle;
  border-top: 1px #ddd solid;
  border-bottom: 1px #ddd solid;
  margin-bottom:-1px;
  padding-left: 20rpx; 
}
.contact-unit .contact-class{
  width:710rpx;
  height: 40px;
  line-height: 40px;
  vertical-align: middle;
  border-top: 1px #ddd solid;
  border-bottom: 1px #ddd solid;
  margin-bottom:-1px;
  margin-left: 40rpx; 
}
.contact-unit .contact-class.active,.contact-unit .grade-class.active{
   color:#2595FC;
}
.contact-unit .contact-user{
  width:680rpx;
  margin-left: 70rpx; 
}
.contact-unit .contact-class .title{
  float:left;
  padding-left:10px;
}
.contact-unit .contact-class .open ,.contact-unit .grade-class .open{
  width:15px;
  float:right;
  margin-top:15px;
  margin-right:10px;
}
.contact-unit .contact-class .close ,.contact-unit .grade-class .close{
  width:10px;
  float:right;
  margin-top:12px;
  margin-right:10px;
}
.contact-unit .contact-user .user-unit{
    width:100%;
    height: 50px;
    line-height: 50px;
    vertical-align: middle;
    border-bottom:1px #ddd solid;
    margin-bottom:-1px; 
    display: flex;
    flex-direction: row;
}
.contact-unit .contact-user .user-unit .user-icon{
    width:24px;
    margin-top:15px;
}
.contact-unit .contact-user .user-unit .user-name{
    width:600rpx;
}
.show{
    display: block;
}
.hide{
    display: none;
}
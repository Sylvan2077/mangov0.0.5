.header {
  height: 40px;
  line-height: 40px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1px #ddd solid;
}
.header .menu {
  width:375rpx;
  text-align: center;
  font-size: 32rpx; 
}
.header .menu.active {
  position: relative;
}
.header .menu.active view{
  width: 125rpx;
  height: 2px;
  position: absolute;
  bottom: -1px;
  left: 125rpx;
  background-color: #f08537;
}
.unit-view {
  width:750rpx;
}
.unit-view .time {
  width:100%;
  text-align: center;
  padding-top:30px;
  padding-bottom: 15px;
}
.unit-view .content {
  width:670;
  background-color: #fff;
  border: 1px #ddd solid;
  border-radius: 5px;
  margin: 0 40rpx;
}
.unit-view .content .title {
  width:610rpx;
  font-weight: bold;
  padding: 30rpx;
  border-bottom: 1px #ddd solid;
}
.unit-view .content .img {
  width:610rpx;
  padding: 30rpx;
}
.unit-view .content .msg {
  width:610rpx;
  padding: 30rpx 30rpx;
  border-bottom: 1px #ddd solid;
}
.unit-view .content .read-all {
  width:610rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
}
.unit-view .content .read-all .cell-1{
  width:300rpx;
}
.unit-view .content .read-all .cell-2{
  width:310rpx;
  text-align: right;
}
.new {
  display: inline-block;
  width:5px;
  height:5px;
  background-color:#FF0000;
  border-radius:50%;
  position: relative;
  margin-left:7rpx;
  top:-10px;
}
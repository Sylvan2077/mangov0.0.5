.bottom {
  width:100%;
  position:fixed;
  bottom:0;
  right:0;
  height:45px;
  line-height:45px;
  vertical-align: middle;
  background-color: #fff;
  border-top:1px #ddd solid;
}
.bottom .menu {
  float:left;
  width:50%;
  text-align:center;
}
.center {
  width:750rpx;
  background-color: #fff;
}
.unit {
  width:690rpx;
  margin:30rpx;
  border: 1px #EBEBEB solid;
  border-radius: 5px;
  box-shadow: 0 -5px 5px #EBEBEB, /*顶部阴影*/  
    0 5px 5px #EBEBEB; /*底边阴影*/
  background-color: #fff;
}
.center .unit .row{
  width:690rpx;
  background-color:#fff;
  display: flex;
  flex-direction: column;
  color:#989898;
  border-bottom: 1px #ddd solid;
}
.center .unit .row .header{
	width:650rpx;
  padding:20rpx;
  display: flex;
  flex-direction: row;
}
.center .unit .row .header .header-1{
	width:110rpx;
}
.center .unit .row .header .header-2{
	width:540rpx;
}
.center .unit .row .content{
	width:630rpx;
  padding:0 30rpx;
}
.center .unit .row .footer{
	width:630rpx;
  padding:20rpx 0;
  margin:0 30rpx;
  font-size: 14px;
  display: flex;
  flex-direction: row;
}
.center .unit .row .footer .cell{
	width:210rpx;
  text-align: center;
  display: inline-block;
}
.show {
  display: block;
  width: 650rpx;
  padding:10rpx 20rpx;
}
.hide {
  display: none;
}

.add-panel {
  width: 100%;
  height: 50px;
  background-color: #fff;
  border-bottom: 1px #ddd solid;
}
.add-panel .left{
  float: left;
  margin-left: 2%;
  margin-top:7px;
}
.add-panel .right{
  float: left;
  margin-top: 15px;
  margin-left: 10px;
}

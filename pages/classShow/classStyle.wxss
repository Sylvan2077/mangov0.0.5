.header {
  height: 40px;
  line-height: 40px;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1px #ddd solid;
}
.header .menu {
  width:375rpx;
  text-align: center;
  font-size: 32rpx; 
}
.header .menu.active {
  position: relative;
}
.header .menu.active view{
  width: 125rpx;
  height: 2px;
  position: absolute;
  bottom: -1px;
  left: 125rpx;
  background-color: #f08537;
}
.center {
  width:750rpx;
  background-color: #fff;
}
.center .unit {
  width:690rpx;
  margin:30rpx;
  border: 1px #EBEBEB solid;
  border-radius: 5px;
  box-shadow: 0 -5px 5px #EBEBEB, /*顶部阴影*/  
    0 5px 5px #EBEBEB; /*底边阴影*/
  background-color: #fff;
}
.center .unit .row{
  width:690rpx;
  background-color:#fff;
  display: flex;
  flex-direction: column;
  color:#989898;
  border-bottom: 1px #ddd solid;
}
.center .unit .row .top{
	width:650rpx;
  padding:20rpx;
  display: flex;
  flex-direction: row;
}
.center .unit .row .top .top-1{
	width:650rpx;
  position: relative;
}
.center .unit .row .top .user-info{
	position: absolute;
  top: 0;
  left:50px;
}
.center .unit .row .content{
	width:630rpx;
  padding:10rpx 30rpx;
}
.center .unit .row .footer{
	width:650rpx;
  padding:10rpx 0;
  margin:0 30rpx;
  font-size: 14px;
  display: flex;
  flex-direction: row;
}
.center .unit .row .footer .cell{
	width:216rpx;
  display: inline-block;
}
.hide {
  display: none;
}
.show {
  display: block;
  width: 300rpx;
  margin-left: 15px;
}
.like-icon {
  width:24px;
  height:24px;
  margin-bottom:-2px;
}
.com-icon {
  width:20px;
  height:20px;
}
.hide-img {
  width:20px;
  height:20px;
  margin-bottom:-5px;
  margin-left:10px;
}
.dashang{
  width:100%;
}
.dashang .img{
  width:33%;
  text-align: center;
  display: inline-block;
  margin-top:20px;
}
.header {
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
}
.unit {
  background-color:#fff;
	width:100%;
	height:40px;
  line-height: 40px;
  position: relative;
  border-bottom:1px #ddd solid;
}
.unit image {
  width:25px;
	height: 25px;
	margin:0 30rpx;
  position: relative;
  top:7px;
}
.txt {
  display: flex;
  flex-direction: row;
}
.cell-1 {
  width:120rpx;
}
.cell-2 {
  width:130rpx;
}
.cell-3 {
  width:480rpx;
  text-align: right;
  padding-right:20rpx;
}
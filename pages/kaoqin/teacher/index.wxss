.center {
  width:750rpx;
  background-color: #fff;
}
.center .unit {
  width:690rpx;
  margin:30rpx;
  border: 1px #EBEBEB solid;
  border-radius: 5px;
  box-shadow: 0 -1px 1px #EBEBEB, /*顶部阴影*/  
    0 5px 5px #EBEBEB; /*底边阴影*/
  background-color: #fff;
}
.center .unit .box {
  width:650rpx;
  height: 50px;
  line-height: 50px;
  display:flex;
  flex-direction: row;
  vertical-align: middle;
  margin: 0 20rpx;
  border-bottom: 1px #EBEBEB solid;
}
.bottom {
  width:750rpx;
  position:fixed;
  bottom:0;
  right:0;
  height:50px;
  background-color: #FFFFFF;
  border-top:1px #ddd solid;
  display:flex;
  flex-direction: row;
}
.bottom .menu {
  width:375rpx;
  text-align:center;
  margin-top:5px;
}
.header {
  width: 600rpx;
  height: 50px;
  border-bottom: 1px #EBEBEB solid;
}
.header .header-left{
  float: left;
  margin-left: 2%;
  margin-top:7px;
}
.header .header-center{
  float: left;
  margin-top: 15px;
  margin-left: 10px;
}
.school-unit {
    width: 600rpx;
    background-color: #FFFFFF;
    padding: 10px 0;
    border-bottom: 1px #ddd solid;
    display: flex;
    flex-direction: row;
    font-size: 11px;
}
.school-unit .left{
  width:140rpx;
  text-align: center;
}
.school-unit .center{
  width:450rpx;
}
.school-unit .center .school-name{
  width:410rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.school-unit .right{
  width:50rpx;
}
.slide {
  position:absolute;
  top:0;
  left:0;
  transition: all 1s ease-in;
  background-color:#fff;
  z-index:1001;
  width:550rpx;
  overflow-y: scroll;
}
.class-unit {
  display:flex;
  flex-direction: row;
  padding:15px 0;
  border-bottom:1px #ddd solid;
}

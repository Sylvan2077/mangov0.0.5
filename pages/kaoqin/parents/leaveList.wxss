.center {
  width:750rpx;
  background-color: #fff;
  font-size: 12px;
}
.center .unit {
  width:690rpx;
  margin:30rpx;
  border: 1px #EBEBEB solid;
  border-radius: 5px;
  box-shadow: 0 -1px 1px #EBEBEB, /*顶部阴影*/  
    0 5px 5px #EBEBEB; /*底边阴影*/
  background-color: #fff;
}
.center .unit .box {
  width:650rpx;
  height: 50px;
  line-height: 50px;
  display:flex;
  flex-direction: row;
  vertical-align: middle;
  margin: 0 20rpx;
  border-bottom: 1px #EBEBEB solid;
}
.unit .header {
  width:650rpx;
  display: flex;
  flex-direction: row;
  padding:5px 20rpx;
}
.unit .content {
  width:650rpx;
  padding:5px 20rpx;
}
.unit .footer {
  width:650rpx;
  padding:5px 20rpx;
  text-align: right;
}
.bottom {
  width:750rpx;
  position:fixed;
  bottom:0;
  right:0;
  height:50px;
  background-color: #FFFFFF;
  border-top:1px #ddd solid;
  display:flex;
  flex-direction: row;
}
.bottom .menu {
  width:375rpx;
  text-align:center;
  margin-top:5px;
}
.agree {
  width: auto;
  display: inline-block;
  margin-top:8px;
  padding:4px 5px;
  background-color: #F0F0F0;
  color:#14D212;
  font-size: 12px;
  border-radius: 10px;
}
.refuse {
  width: auto;
  display: inline-block;
  margin-top:8px;
  padding:4px 5px;
  background-color: #F0F0F0;
  font-size: 12px;
  border-radius: 10px;
  color:#ff0000;
}
.apply {
  width: auto;
  display: inline-block;
  margin-top:8px;
  padding:4px 5px;
  background-color: #F0F0F0;
  font-size: 12px;
  border-radius: 10px;
}
.del-img {
  width:20px;
  height:20px;
  margin-bottom:-5px;
}
